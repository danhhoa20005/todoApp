<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Task"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:paddingTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mô tả phụ -->
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's plan something new today ✨"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút EDIT cố định đáy màn hình -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditTask"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Edit Task"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@drawable/bg_button_social"
        app:cornerRadius="28dp"
        app:rippleColor="#1FFFFFFF"
        android:elevation="6dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- VÙNG CUỘN: nằm trên nút, không che nút -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="32dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintBottom_toTopOf="@id/btnEditTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TASK TITLE -->
            <TextView
                android:id="@+id/tvLabelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TASK TITLE"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:letterSpacing="0.05"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="20dp"
                android:paddingTop="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                android:layout_marginHorizontal="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your task title"
                    android:textColor="@android:color/white"
                    android:textColorHint="#40FFFFFF"
                    android:inputType="textCapSentences"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DETAIL -->
            <TextView
                android:id="@+id/tvLabelDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DETAIL"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:letterSpacing="0.05"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                android:layout_marginHorizontal="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Describe your task"
                    android:inputType="textCapSentences|textMultiLine"
                    android:minLines="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#40FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DATE -->
            <TextView
                android:id="@+id/tvLabelDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                android:layout_marginHorizontal="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select date"
                    android:textColor="@android:color/white"
                    android:textColorHint="#40FFFFFF"
                    android:inputType="none"
                    android:focusable="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- TIME: 2 mục trên cùng 1 hàng (label + ô nhập) -->
            <LinearLayout
                android:id="@+id/rowTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp">

                <!-- START TIME -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvStartLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="START TIME:"
                        android:textSize="12sp"
                        android:textColor="#66FFFFFF"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutStartInline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtStartTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select "
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:textColorHint="#40FFFFFF"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:inputType="none"
                            android:focusable="false" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- END TIME -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvEndLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="END TIME:"
                        android:textSize="12sp"
                        android:textColor="#66FFFFFF"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutEndInline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtEndTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select "
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:textColorHint="#40FFFFFF"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:inputType="none"
                            android:focusable="false" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- TOGGLE DONE -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#40FFFFFF"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="20dp" />

            <!-- Đệm cuối cho thoáng khi cuộn lên nút -->
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
