<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editFragment"
    android:background="@drawable/bg_color">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Task"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:paddingTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mô tả phụ -->
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's plan something new today ✨"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ✅ VÙNG CUỘN: chứa các ô nhập -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="32dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TASK TITLE -->
            <TextView
                android:id="@+id/tvLabelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TASK TITLE"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:letterSpacing="0.05"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="20dp"
                android:paddingTop="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                android:layout_marginHorizontal="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your task title"
                    android:textColor="@android:color/white"
                    android:textColorHint="#40FFFFFF"
                    android:background="@android:color/transparent"
                    android:inputType="textCapSentences"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DETAIL -->
            <TextView
                android:id="@+id/tvLabelDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DETAIL"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:letterSpacing="0.05"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                android:layout_marginHorizontal="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Describe your task"
                    android:inputType="textCapSentences|textMultiLine"
                    android:minLines="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#40FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DATE -->
            <TextView
                android:id="@+id/tvLabelDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                android:layout_marginHorizontal="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select date"
                    android:textColor="@android:color/white"
                    android:textColorHint="#40FFFFFF"
                    android:background="@android:color/transparent"
                    android:inputType="none"
                    android:focusable="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- START TIME -->
            <TextView
                android:id="@+id/tvLabelStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="START TIME"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                android:layout_marginHorizontal="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select start time"
                    android:textColor="@android:color/white"
                    android:textColorHint="#40FFFFFF"
                    android:background="@android:color/transparent"
                    android:inputType="none"
                    android:focusable="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- END TIME -->
            <TextView
                android:id="@+id/tvLabelEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="END TIME"
                android:textSize="12sp"
                android:textColor="#66FFFFFF"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                android:layout_marginHorizontal="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select end time"
                    android:textColor="@android:color/white"
                    android:textColorHint="#40FFFFFF"
                    android:background="@android:color/transparent"
                    android:inputType="none"
                    android:focusable="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- TOGGLE DONE -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đã hoàn thành"
                android:textColor="#40FFFFFF"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp" />

            <!-- NÚT EDIT -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditTask"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Edit Task"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@drawable/bg_button_social"
                app:cornerRadius="28dp"
                app:rippleColor="#1FFFFFFF"
                android:elevation="6dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
