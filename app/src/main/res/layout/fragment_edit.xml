<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editFragment"
    android:background="@drawable/bg_color">

    <!-- Nút back -->


    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit Task"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:paddingTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mô tả phụ -->
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Let's plan something new today ✨"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LABEL: TITLE -->
    <TextView
        android:id="@+id/tvLabelTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TASK TITLE"
        android:textSize="12sp"
        android:textColor="#66FFFFFF"
        android:letterSpacing="0.05"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        android:paddingTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- INPUT: TITLE -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your task title"
            android:textColor="@android:color/white"
            android:textColorHint="#40FFFFFF"
            android:background="@android:color/transparent"
            android:inputType="textCapSentences"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- LABEL: DETAIL -->
    <TextView
        android:id="@+id/tvLabelDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DETAIL"
        android:textSize="12sp"
        android:textColor="#66FFFFFF"
        android:letterSpacing="0.05"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- INPUT: DETAIL -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Describe your task"
            android:inputType="textCapSentences|textMultiLine"
            android:minLines="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="#40FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- LABEL: DATE -->
    <TextView
        android:id="@+id/tvLabelDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DATE"
        android:textSize="12sp"
        android:textColor="#66FFFFFF"
        android:letterSpacing="0.05"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- INPUT: DATE (dạng click mở DatePicker) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select date"
            android:textColor="@android:color/white"
            android:textColorHint="#40FFFFFF"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- LABEL: START TIME -->
    <TextView
        android:id="@+id/tvLabelStartTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="START TIME"
        android:textSize="12sp"
        android:textColor="#66FFFFFF"
        android:letterSpacing="0.05"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- INPUT: START TIME -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutStartTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelStartTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select start time"
            android:textColor="@android:color/white"
            android:textColorHint="#40FFFFFF"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- LABEL: END TIME -->
    <TextView
        android:id="@+id/tvLabelEndTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="END TIME"
        android:textSize="12sp"
        android:textColor="#66FFFFFF"
        android:letterSpacing="0.05"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutStartTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- INPUT: END TIME -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutEndTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelEndTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select end time"
            android:textColor="@android:color/white"
            android:textColorHint="#40FFFFFF"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:focusable="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nút Add Task -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditTask"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Edit Task"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="28dp"
        android:background="@drawable/bg_button_social"
        app:rippleColor="#1FFFFFFF"
        android:elevation="6dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutEndTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
