<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color">

    <!-- Nút back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:textSize="48dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"/>

    <!-- Email đang dùng -->
    <TextView
        android:id="@+id/tvUsing1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Using "
        android:textColor="#B3FFFFFF"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvEmailDynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="danhhoa200005@gmail.com"
        android:textColor="#D1C4E9"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/tvUsing1"
        app:layout_constraintStart_toEndOf="@id/tvUsing1"/>

    <TextView
        android:id="@+id/tvUsing2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" to Sign up"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/tvUsing1"
        app:layout_constraintStart_toEndOf="@id/tvEmailDynamic"
        android:layout_marginEnd="24dp"/>

    <!-- Label mật khẩu -->
    <TextView
        android:id="@+id/tvLabelPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="YOUR PASSWORD"
        android:textSize="12sp"
        android:textColor="#66FFFFFF"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@id/tvUsing2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"/>

    <!-- Nhập mật khẩu -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        app:endIconTint="@android:color/white"
        app:boxBackgroundMode="none"

        app:layout_constraintTop_toBottomOf="@id/tvLabelPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        app:hintEnabled="false"
        android:layout_marginEnd="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:hintEnabled="false"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#40FFFFFF"
            android:background="@android:color/transparent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Label xác nhận mật khẩu -->
    <TextView
        android:id="@+id/tvLabelPassword1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CONFIRM PASSWORD"
        android:textSize="12sp"
        android:textColor="#66FFFFFF"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@id/layoutPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"/>

    <!-- Nhập lại mật khẩu -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutPassword1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        app:endIconTint="@android:color/white"
        app:boxBackgroundMode="none"
        app:layout_constraintTop_toBottomOf="@id/tvLabelPassword1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        app:hintEnabled="false"
        android:layout_marginEnd="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#40FFFFFF"
            android:background="@android:color/transparent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nút Sign Up -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignUp"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="28dp"
        android:background="@drawable/bg_button_social"
        app:rippleColor="#1FFFFFFF"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/layoutPassword1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
