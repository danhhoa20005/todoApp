<?xml version="1.0" encoding="utf-8"?>
<!-- // Định nghĩa các style tùy chỉnh cho lịch, văn bản và thanh điều hướng -->
<resources>

    <!-- Nếu dùng cho BottomNavigation -->
    <style name="BottomNavIndicatorTransparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Chữ thứ (M, T, W, ... ) -->
    <style name="Cal_WeekDay_White" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Chữ ngày -->
    <style name="Cal_Date_White" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_white</item>
    </style>

    <!-- Nhãn T2..CN tự làm (nếu cần) -->
    <style name="TextLabelDay">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:alpha">0.75</item>
    </style>

    <!-- Text màu trắng & xám dùng chung -->
    <style name="Cal.DateText" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="Cal.WeekDayText" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <!-- Style TỔNG cho CalendarView (duy nhất) -->
    <!-- LƯU Ý: đúng là Widget.Material.CalendarView (KHÔNG có @android: ở trước) -->
    <style name="WhiteCalendarView" >
        <item name="android:focusedMonthDateColor">@color/text_white</item>
        <item name="android:unfocusedMonthDateColor">@color/text_gray</item>
        <item name="android:dateTextAppearance">@style/Cal.DateText</item>
        <item name="android:weekDayTextAppearance">@style/Cal.WeekDayText</item>
        <item name="android:showWeekNumber">false</item>
        <item name="android:weekSeparatorLineColor">@android:color/transparent</item>
    </style>

    <!-- Ép header tháng và vòng tròn ngày chọn -->
    <style name="Cal.ThemeOverlay" parent="ThemeOverlay.Material3.Dark">
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_gray</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorControlHighlight">@color/purple_500</item>
        <item name="colorOnSurface">@color/text_white</item>
    </style>



</resources>
