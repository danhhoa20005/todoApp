<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Quyền mạng (Firebase, API,...) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Quyền hiện thông báo (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Quyền dùng exact alarm (AlarmManager.setExact / setExactAndAllowWhileIdle) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- (Tùy chọn) chỉ khi thực sự cần cho Android 13+ -->
    <!-- <uses-permission android:name="android.permission.USE_EXACT_ALARM" /> -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppManagement">

        <!-- Activity chính -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Receiver nhận alarm và hiển thị thông báo -->
        <receiver
            android:name=".notifications.TaskReminderReceiver"
            android:exported="false" />

        <!-- Facebook SDK (nếu có dùng) -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

    </application>
</manifest>
